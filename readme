git pull && sudo systemctl restart image_counter_bot.service
cp ./image_counter_bot.service /etc/systemd/system/image_counter_bot.service

# Перечитать конфигурацию systemd
sudo systemctl daemon-reload

# Запустить сервис
sudo systemctl start image_counter_bot.service

# Включить автозапуск при загрузке
sudo systemctl enable image_counter_bot.service